{
  "name": "AI-Enhanced Dev Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "20-bookworm"
    }
  },
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": true
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        // Core Extensions (minimal)
        "editorconfig.editorconfig",
        "eamodio.gitlens",
        "gruntfuggly.todo-tree",
        
        // AI Assistants - Add as needed per project
        // "anthropic.claude-code",
        // "google.geminicodeassist",
        
        // Project-specific extensions go here
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        },
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "git.autofetch": true,
        "git.confirmSync": false
      }
    }
  },

  "postCreateCommand": "bash .devcontainer/post-create.sh",
  
  "postStartCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}",

  "remoteUser": "vscode",
  
  "mounts": [
    // Mount SSH keys for git operations (read-only)
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,readonly",
    
    // Mount git config
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,readonly",
    
    // Optional: Mount API keys securely
    // "source=${localEnv:HOME}/.config/claude,target=/home/vscode/.config/claude,type=bind,readonly",
    // "source=${localEnv:HOME}/.config/gemini,target=/home/vscode/.config/gemini,type=bind,readonly"
  ],

  "runArgs": [
    // Security: Drop unnecessary capabilities
    "--cap-drop=ALL",
    "--cap-add=CHOWN",
    "--cap-add=SETUID",
    "--cap-add=SETGID",
    "--security-opt=no-new-privileges"
  ],

  "containerEnv": {
    "TZ": "${localEnv:TZ}",
    // Set safe mode for AI assistants by default
    "CLAUDE_SAFE_MODE": "true",
    "GEMINI_SAFE_MODE": "true"
  },

  "forwardPorts": [],
  
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "notify"
    }
  }
}